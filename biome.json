{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["node_modules", "dist"]
	},
	"formatter": {
		"enabled": true
	},

	"files": {
		"include": ["src/**/*.ts", "tests/**/*.ts"]
	}
}
